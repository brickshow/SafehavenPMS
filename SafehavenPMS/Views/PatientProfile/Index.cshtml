@model SafehavenPMS.Models.Patient
@{
    ViewBag.Title = "Brix Lampago";
    var patientId = 123456;
}

@* Header: Patient Name + Status *@
<div>
    <div class="d-flex justify-content-start align-items-start mb-3">
        <div class="d-flex align-items-center">
            <i class='bx bx-reply fs-1 me-2'></i>
            <img src="/Images/sample.JPG" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;" />
            <div>
                <h4 class="mb-0 fw-bold text-custom">Brix Lampago</h4>
                <span class="text-muted">Patient - 230491</span>
            </div>
        </div>
        <div class="d-flex align-items-start">
            <span class="badge bg-success m-2">Active</span>
        </div>
    </div>
    <div>
        <ul class="nav nav-tabs mb-4" id="profileTabs">
            <li class="nav-item"><a class="nav-link active" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_Overview", patientId = patientId })" href="#">Overview</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_Personal", patientId = patientId })" href="#">Personal</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_Notes", patientId = patientId })" href="#">Notes</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_CaseDocumentation", patientId = patientId })" href="#">Case Documentation</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_PrescriptionMedication", patientId = patientId })" href="#">Prescription & Medication</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_Billing", patientId = patientId })" href="#">Billing</a></li>
            <li class="nav-item"><a class="nav-link" data-url="@Url.Action("LoadTab", "PatientProfile", new { tab = "_ActivityLogs", patientId = patientId })" href="#">Activity Logs</a></li>
        </ul>
    </div>
</div>

@* Initial content area with Overview partial *@
<div id="tabContentArea">
    @await Html.PartialAsync("_Overview", Model);
</div>


@* Styles *@
<style>
    .upload-button {
        background-color: white;
        color: #00A3B4;
        margin: 5px;
        border: 2px solid #00A3B4;
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .upload-button:hover {
            background-color: #00A3B4;
            color: white;
            transform: translateY(-1px);
        }

    .nav-tabs .nav-link {
        color: #767676;
        background-color: transparent;
        border: none;
        font-weight: normal;
    }

        .nav-tabs .nav-link.active {
            color: #00A3B4;
            background-color: transparent;
            border: none;
            border-bottom: 3px solid #00A3B4;
            font-weight: bold;
        }
</style>

<script src="~/js/patient-tabs.js"></script>