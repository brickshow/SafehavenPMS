@{
    ViewBag.Title = "Clinical Staff List";
}

<div class="header">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div class="d-flex align-items-center">
            <i class='bx bxs-group fs-2 me-2'></i>
            <h5 class="text-custom mb-0">Clinical Staff List</h5>

            <div class="top-content m-2 d-flex justify-content-between align-content-center">
                @* Left Corner Section *@
                <div class="top-left-corner d-flex flex-row align-items-center gap-2">
                    @* Search bar *@
                    <form asp-controller="Patient" asp-action="Search" method="post" class="d-flex flex-row justify-content-center m-1 gap-2">
                        <div class="search-input-wrapper d-flex flex-row gap-2">
                            <i class='bx bx-search search-icon'></i>
                            <input class="form-control search-input" placeholder="Search patients..." />
                        </div>
                        <button type="submit" class="btn" style="height:30px">Search</button>
                    </form>
                    @* Filter by status *@
                    <div class="status">
                        <form asp-controller="Patient" asp-action="FilterStatus" method="post" class="d-flex justify-content-center align-items-center">
                            <select style="height:30px; border-radius:20px; padding-left:5px; border:1px dashed #cbcbcb">
                                Status
                                <option>Active</option>
                                <option>More Option</option>
                            </select>
                        </form>
                    </div>
                    @* Sort by *@
                    <div class="sort-by d-flex align-items-center">
                        <form asp-controller="Patient" asp-action="SortBy" method="post">
                            <button type="submit" class="sort-button d-flex align-items-center justify-content-between">
                                <span class="me-2">Sort by</span>
                                <div class="number-box d-flex align-items-center gap-1">
                                    <div class="numbers d-flex flex-column justify-content-center align-items-center">
                                        <span class="number">1</span>
                                        <span class="number">2</span>
                                    </div>
                                    <i class='bx bx-up-arrow-alt'></i>
                                </div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <a href="@Url.Action("AddNewClinicalStaff", "ClinicalStaff")" class="btn btn-primary">
            <i class='bx bx-user-plus me-1'></i>
            New Staff
        </a>
    </div>
    @* top content section *@
    
    <hr class="mt-0 mb-2" />
</div>

